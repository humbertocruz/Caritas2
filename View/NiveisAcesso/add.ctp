<h3>Novo Nível de Acesso</h3>
<hr>
<form method="post">
	<fieldset>
		<legend>Nível de Acesso</legend>
		<div class="control-group">
			<label class="control-label" for="descricao">Nome</label>
			<div class="controls">
				<input type="text" id="descricao" name="data[nome]">
			</div>
		</div>
	</fieldset>
	<fieldset class="form-actions">
		<input type="submit" value="Gravar" class="btn btn-primary">
		<a href="/niveis_acesso/index" class="btn">Cancelar</a>
	</fieldset>
</form>